<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="PixelPort.changepassword"
        Height="400" Width="600" WindowStartupLocation="CenterScreen" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent" >
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Border Background="#353239" CornerRadius="30" >
        <Grid Margin="-168,-13,-258,-366">
            <Grid.RowDefinitions>
                <RowDefinition Height="156*"/>
                <RowDefinition Height="623*"/>
            </Grid.RowDefinitions>
            <TextBlock Foreground="#f72d93" FontSize="23" HorizontalAlignment="Left" Margin="365,99,0,61"   FontFamily="pack://application:,,,/Fonts/#Baumans" Grid.RowSpan="2"><Run Text="Change Password"/></TextBlock>
            <TextBlock Foreground="white" FontSize="17"  Margin="250,14,10,10" Text="" Grid.Row="1"/>
            <TextBlock Foreground="white" FontSize="17"  Margin="286,72,-26,12" Grid.Row="1"><Run Text="Confirm Password"/></TextBlock>

            <TextBlock Foreground="#f72d93" FontSize="30" HorizontalAlignment="Left" Margin="398,35,0,125"   FontFamily="pack://application:,,,/Fonts/#Baumans" Grid.RowSpan="2"><Run Text="PixelPort"/></TextBlock>
            <TextBlock Foreground="white" FontSize="17"  Margin="287,6,-27,78" Grid.Row="1"><Run Text="New Password"/></TextBlock>
            <PasswordBox x:Name="newpwd" HorizontalAlignment="Left" Margin="541,11,0,0" VerticalAlignment="Top" Width="120" Grid.Row="1"/>
            <PasswordBox x:Name="confirmpwd" HorizontalAlignment="Left" Margin="540,76,0,0" VerticalAlignment="Top" Width="120" Grid.Row="1"/>
            <Button Content="Change Password" Style="{StaticResource buynowbutton}" Margin="544,169,0,0" Grid.Row="1" VerticalAlignment="Top" Width="118" Click="Change_password"/>

        </Grid>



    </Border>
</Window>
