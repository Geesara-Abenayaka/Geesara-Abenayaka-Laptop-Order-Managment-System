<UserControl x:Class="PixelPort.LoginControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PixelPort"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="#181818" CornerRadius="30" >
        <Grid>
            <TextBlock Foreground="#f72d93" FontSize="30" HorizontalAlignment="center" Margin="80"   FontFamily="pack://application:,,,/Fonts/#Baumans">Login</TextBlock>
            <TextBlock Foreground="white" FontSize="17"  Margin="250 170 10 10">Username</TextBlock>
            <TextBox x:Name="MyTextBox" Width="200" Height="20" Text="Enter Your Username" Margin="140 -75 10 10"/>
            <TextBlock Foreground="white" FontSize="17"  Margin="250 230 10 10">Password</TextBlock>
            <PasswordBox x:Name="MyPasswordBox" Width="200" Height="19" Margin="365,233,235,197" />
            <TextBlock Foreground="white" FontSize="12"  Margin="250 280 10 10">Don't you have an account yet?</TextBlock>
            <TextBlock Foreground="#f72d93" FontSize="12"  Margin="460 280 10 10">Click here to signup</TextBlock>
            <Button Width="100" Height="30" Margin="465 230 10 10" Foreground="white" FontSize="15" Style="{StaticResource buynowbutton}">Login</Button>

        </Grid>
    </Border>
</UserControl>
