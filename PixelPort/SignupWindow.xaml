<Window x:Class="PixelPort.SignupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Height="400" Width="600" WindowStartupLocation="CenterScreen" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent" >
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Border Background="#353239" CornerRadius="30" >
        <Grid Margin="-168,-13,-258,-366">
            <TextBlock Foreground="#f72d93" FontSize="23" HorizontalAlignment="Left" Margin="431,97,0,63"   FontFamily="pack://application:,,,/Fonts/#Baumans">Signup</TextBlock>
            <TextBlock Foreground="white" FontSize="17"  Margin="250 170 10 10">Username</TextBlock>
            <TextBox x:Name="UsernameBox" Width="200" Height="20" Text="Enter Your Username" Margin="483,171,343,588"/>
            <TextBlock Foreground="white" FontSize="17"  Margin="250 230 10 10">Password</TextBlock>
            <PasswordBox x:Name="PassBox" Width="200" Height="19" Margin="482,232,344,528" />
            <TextBlock Foreground="white" FontSize="12"  Margin="250,280,-595,23">Already have an account</TextBlock>
            <TextBlock Foreground="#f72d93" FontSize="12"  Margin="482,281,31,9" MouseLeftButtonDown="loginclick" Cursor="Hand">Click here to Login</TextBlock>
            <Button Width="100" Height="30" Margin="581,346,0,403" Foreground="white" FontSize="15"  Style="{StaticResource buynowbutton}" Click="Signup_click">Signup</Button>
            <TextBlock Foreground="#f72d93" FontSize="30" HorizontalAlignment="Left" Margin="398,35,0,125"   FontFamily="pack://application:,,,/Fonts/#Baumans"><Run Text="PixelPort"/></TextBlock>

        </Grid>



    </Border>
</Window>
