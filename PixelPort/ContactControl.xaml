<UserControl x:Class="PixelPort.ContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PixelPort"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Foreground="#dfaffd" FontSize="25" HorizontalAlignment="Center" Grid.Row="0" Margin="0 0 0 10">Contact Us</TextBlock>

        <!-- Subtitle -->
        <TextBlock Foreground="#dfaffd" FontSize="21" HorizontalAlignment="Left" Grid.Row="1" Margin="0 10 0 0">Contact Us</TextBlock>

        <!-- Description -->
        <TextBlock Foreground="White" FontSize="18" TextWrapping="Wrap" Grid.Row="2" Margin="0 10 0 0">
        You can contact our Customer Service for all questions and queries on any of the following channels during office hours
        </TextBlock>

        <!-- Name -->
        <TextBlock Foreground="White" FontSize="15" Grid.Row="3" Margin="0 60 0 5">Your Name</TextBlock>
        <TextBox Name="namebox" Width="250" Height="30" Padding="10,0,0,0" Style="{StaticResource textboxSearch}" Grid.Row="4"/>

        <!-- Email -->
        <TextBlock Foreground="White" FontSize="15" Grid.Row="5" Margin="0 10 0 5">Your Email</TextBlock>
        <TextBox Name="emailbox" Width="250" Height="30" Padding="10,0,0,0" Style="{StaticResource textboxSearch}" Grid.Row="6"/>

        <!-- Message -->
        <TextBlock Foreground="White" FontSize="15" Grid.Row="7" Margin="0 10 0 5">Your Message</TextBlock>
        <TextBox Name="massegebox" Width="250" Height="40" Padding="10,5,0,0" AcceptsReturn="True" TextWrapping="Wrap"
             Style="{StaticResource textboxSearch}" Grid.Row="8"/>
    </Grid>

</UserControl>
